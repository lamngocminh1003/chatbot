<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
      let senderId = "<%= senderId %>";
    </script>
    <title>Đặt lịch khám bệnh</title>
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Load custom Javascript and CSS-->
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <script type="text/javascript" src="/js/booking.js"></script>
  </head>
  <body>
    <div class="container fix-height">
      <div class="row" id="customerInfo">
        <div class="col-12">
          <div class="text-center mt-3">
            <span class="title">Thông tin bệnh nhân</span>
          </div>
          <input type="text" id="psid" hidden />
          <div class="form-group">
            <label for="customerName">Họ và tên:</label>
            <input
              type="text"
              id="customerName"
              class="form-control"
              placeholder="Họ và tên..."
            />
          </div>
          <div class="form-group">
            <label for="email"
              >Địa chỉ email (<span style="color: red">*</span>):</label
            >
            <input
              type="email"
              id="email"
              class="form-control"
              placeholder="Địa chỉ email..."
            />
            <div class="invalid-feedback">Địa chỉ email không hợp lệ.</div>
          </div>
          <div class="form-group">
            <label for="phoneNumber"
              >Số điện thoại (<span style="color: red">*</span>):</label
            >
            <input
              type="text"
              id="phoneNumber"
              class="form-control"
              placeholder="Số điện thoại..."
            />
            <div class="invalid-feedback">Số điện thoại không hợp lệ.</div>
          </div>
          <div class="form-group">
            <label for="customerReason"
              >Lý do khám (<span style="color: red">*</span>):</label
            >
            <input
              type="text"
              id="customerReason"
              class="form-control"
              placeholder="Lý do khám..."
            />
          </div>
          <div class="form-group">
            <label for="customerAddress"
              >Địa chỉ liên hệ (<span style="color: red">*</span>):</label
            >
            <input
              type="text"
              id="customerAddress"
              class="form-control"
              placeholder="Địa chỉ liên hệ..."
            />
          </div>
          <button class="btn btn-primary" id="btnReserveTable">
            Đặt lịch khám
          </button>
        </div>
      </div>
      <div class="row handle-error" id="handleError">
        <h5>Thông tin của bạn đã được ghi nhận thành công! Vui lòng đóng popup</h5>
      </div>
    </div>
    <footer>
      <div class="text-center">
        <div class="">
          <span class="mr-3">
            &copy;
            <a
              title="Website Booking Care"
              href="https://chatbot-i019.onrender.com/"
              target="_blank"
              >Chatbot Booking Care</a
            ></span
          >
          <span class="ml-3">
            Tạo bởi
            <a
              href="https://www.facebook.com/profile.php?id=100027366979129"
              title="Liên hệ"
              target="_blank"
              >Ngọc Minh</a
            >
          </span>
        </div>
      </div>
    </footer>
  </body>
</html>
